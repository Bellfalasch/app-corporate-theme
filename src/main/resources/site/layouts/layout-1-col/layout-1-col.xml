<layout>
    <display-name>1 column</display-name>
    <config>
        <input name="fullWidth" type="CheckBox">
            <label>Full width?</label>
            <occurrences minimum="0" maximum="1" />
        </input>
        <input name="backgroundColor" type="TextLine">
            <label>Background colour</label>
            <help-text>Add background color for this layout. The color should be a hexadecimal value (like #4286f4).</help-text>
            <occurrences minimum="0" maximum="1" />
        </input>
    </config>
    <regions>
        <region name="main" />
    </regions>
</layout>
