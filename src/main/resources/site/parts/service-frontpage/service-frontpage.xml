<part>
    <display-name>Services - List selected</display-name>
    <config>
        <input type="TextLine" name="title">
            <label>Title</label>
            <occurrences minimum="1" maximum="1"></occurrences>
            <default>What We Offer</default>
        </input>
        <input type="TextArea" name="intro">
            <label>Introduction</label>
            <occurrences minimum="1" maximum="1"></occurrences>
            <default>Look at some of the recent projects we have completed for our valuble clients</default>
        </input>
        <input type="ContentSelector" name="service">
            <label>Service list</label>
            <occurrences minimum="0" maximum="0"/>
            <config>
                <allowContentType>service</allowContentType>
                <allowPath>${site}/*</allowPath>
            </config>
        </input>
    </config>
</part>