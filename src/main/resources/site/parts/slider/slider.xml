<part>
    <display-name>Slider</display-name>
    <config>
        <item-set name="banner">
            <label>Slider info</label>
            <items>
                <input type="ImageSelector" name="image">
                    <label>Image</label>
                    <occurrences minimum="1" maximum="1"/>
                </input>
                <input type="TextLine" name="title1">
                    <label>Title 1</label>
                    <occurrences minimum="0" maximum="1"/>
                </input>
                <input type="TextLine" name="title2">
                    <label>Title 2</label>
                    <occurrences minimum="0" maximum="1"/>
                </input>
                <input type="TextLine" name="url">
                    <label>Url</label>
                    <occurrences minimum="0" maximum="1"/>
                </input>
                <input type="TextLine" name="bannerBackgroundCol">
                    <label>Background colour (Hex color)</label>
                    <occurrences minimum="0" maximum="1"/>
                </input>
            </items>
            <occurrences minimum="0" maximum="0" />
        </item-set>
    </config>
</part>