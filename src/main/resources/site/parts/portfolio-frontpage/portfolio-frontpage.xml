<part>
    <display-name>Portfolio - List selected</display-name>Â¨
    <config>
        <input name="partTitle" type="TextLine">
            <label>Heading</label>
				<default>Our recent work</default>
            <occurrences minimum="0" maximum="1" />
        </input>
        <input name="partIntro" type="TextArea">
            <label>Introduction text</label>
				<default>Some introduction text to your work</default>
            <occurrences minimum="0" maximum="1" />
        </input>
        <input name="portfolio" type="ContentSelector">
            <label>Selected portfolio items</label>
				<help-text>Select any number of specific portfolio items you want to show. Protip: Exactly 4 items looks best =)</help-text>
            <occurrences minimum="0" maximum="4" />
            <config>
                <allowContentType>portfolio</allowContentType>
                <allowPath>${site}/*</allowPath>
            </config>
        </input>
    </config>
</part>
