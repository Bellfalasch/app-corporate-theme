<?xml version="1.0" encoding="UTF-8"?>
<site>
  <config>
    <input type="ImageSelector" name="logo">
      <label>Header Logo</label>
      <occurrences minimum="0" maximum="1" />
    </input>
    <field-set name="footer">
      <label>Footer Info </label>
      <items>
        <field-set name="contact">
          <label>Contact Info</label>
          <items>
            <input name="title" type="TextLine">
              <label>Title for first column</label>
              <occurrences minimum="1" maximum="1"/>
            </input>
            <input name="address" type="TextLine">
              <label>Address</label>
              <occurrences minimum="0" maximum="1"/>
            </input>
            <input name="email" type="TextLine">
              <label>E-mail</label>
              <occurrences minimum="0" maximum="1"/>
            </input>
            <input name="phone" type="TextLine">
              <label>Phone No</label>
              <occurrences minimum="0" maximum="1"/>
            </input>
          </items>
        </field-set>
    <field-set name="about">
      <label>About company</label>
      <items>
          <input name="title2" type="TextLine">
            <label>Title for second column</label>
            <occurrences minimum="1" maximum="1"/>
          </input>
          <input name="items" type="ContentSelector">
            <label>Select pages</label>
            <occurrences minimum="0" maximum="0"/>
            <allowContentType>landing-page</allowContentType>
          </input>
      </items>
    </field-set>
    <field-set name="text">
      <label>Free text</label>
      <items>
        <input name="title3" type="TextLine">
          <label>Title for third column</label>
          <occurrences minimum="1" maximum="1"/>
        </input>
        <input name="freeText" type="HtmlArea">
          <label>Free text</label>
          <occurrences minimum="1" maximum="1"/>
          <allowContentType>landing-page</allowContentType>
        </input>
      </items>
    </field-set>
        <input type="TextArea" name="footerText">
          <label>Footer text</label>
          <occurrences minimum="0" maximum="1" />
        </input>

        <input type="ComboBox" name="SocialIcon">
          <label>Social icons</label>
          <occurrences minimum="0" maximum="0" />
          <config>
            <option value="facebook">Facebook</option>
            <option value="twitter">Twitter</option>
            <option value="instagram">Instagram</option>
            <option value="youtube">Youtube</option>
            <option value="gplus">Google Plus</option>
            <option value="linkedin">Linkedin</option>
          </config>
        </input>
      </items>
    </field-set>
  </config>
  <x-data mixin="menu-item"/>
</site>

