<part>
    <display-name>Contact</display-name>
    <config>
        <input name="text" type="TextArea">
            <label>Text</label>
            <occurrences minimum="1" maximum="1"/>
        </input>
        <input name="address" type="TextLine">
            <label>Address</label>
            <occurrences minimum="0" maximum="1"/>
        </input>
        <input name="email" type="TextLine">
            <label>E-mail to show to public</label>
            <occurrences minimum="1" maximum="1"/>
        </input>
        <input name="emailReceiver" type="TextLine">
            <label>E-mail to receive the message</label>
            <occurrences minimum="1" maximum="1"/>
        </input>
        <input name="phone" type="TextLine">
            <label>Phone</label>
            <occurrences minimum="0" maximum="1"/>
        </input>
        <input name="site" type="TextLine">
            <label>Site Url</label>
            <occurrences minimum="0" maximum="1"/>
        </input>
    </config>
</part>