<part>
    <display-name>Bottom</display-name>
    <config>
        <input name="title" type="TextLine">
            <label>Title for first column</label>
            <occurrences minimum="0" maximum="1"/>
        </input>
        <item-set name="contact">
            <label>Contact Info</label>
            <occurrences minimum="0" maximum="0"/>
            <items>
                <input name="icon" type="ComboBox">
                    <label>Icon</label>
                    <occurrences minimum="1" maximum="1"/>
                    <config>
                        <option value="home">Home</option>
                        <option value="envelope">Envelope</option>
                        <option value="globe">Globe</option>
                        <option value="phone">Phone</option>
                    </config>
                </input>
                <input name="text" type="TextLine">
                    <label>Text</label>
                    <occurrences minimum="1" maximum="1"/>
                </input>
            </items>
        </item-set>
        <input name="title2" type="TextLine">
            <label>Title for second column</label>
            <occurrences minimum="0" maximum="1"/>
        </input>
        <input name="items" type="ContentSelector">
            <label>Select pages</label>
            <occurrences minimum="0" maximum="0"/>
            <allowContentType>landing-page</allowContentType>
        </input>
    </config>
</part>