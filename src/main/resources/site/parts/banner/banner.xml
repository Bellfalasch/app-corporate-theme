<part>
    <display-name>Header slider banner</display-name>
    <config>
        <field-set name="banner">
            <label>Banner info</label>
            <items>
                <input type="imageSelector" name="bannerImage">
                    <label>Image</label>
                    <occurrences minimum="1" maximum="1"/>
                </input>
                <input type="htmlArea" name="bannerText">
                    <label>Text</label>
                    <occurrences minimum="0" maximum="1"/>
                </input>
                <input type="textLine" name="bannerUrl">
                    <label>Url</label>
                    <occurrences minimum="0" maximum="1"/>
                </input>
                <input type="textLine" name="bannerBackgroundCol">
                    <label>Background colour (Hex color)</label>
                    <occurrences minimum="0" maximum="1"/>
                </input>
            </items>
        </field-set>
    </config>
</part>